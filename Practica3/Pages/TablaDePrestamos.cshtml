@page
@using System.Globalization
@model Practica3.Pages.TablaDePrestamosModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h3>@Model.prestamo.Monto</h3>
    </div>
</div>
<div class=""row">
    <div class="col col-lg-3">
        <form method="get">
            <div class="form-group">
                <label for="montoDelPrestamoSolicitado">Monto</label>
                <input type="number" name="montoDelPrestamoSolicitado" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="interes">Interes</label>
                <input type="number" name="interes" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="tiempo">Tiempo calculado en meses</label>
                <input type="number" name="tiempo" class="form-control"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Calcular</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h1>Cuota solicitada</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Cuota</th>
                    <th>Capital</th>
                    <th>Interes</th>
                    <th>Mes</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.tablaDelPrestamo)
                {
                    <tr>
                        <td>@item.Cuota.ToString("N", CultureInfo.CurrentCulture)</td>
                        <td>@item.Capital.ToString("N", CultureInfo.CurrentCulture)</td>
                        <td>@item.Interes.ToString("N", CultureInfo.CurrentCulture)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
